{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Train",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "args": [
                "train",
                "--lr",
                "1e-4"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },

        {
            "name": "Evaluate",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "args": [
                "evaluate",
                "model.pth"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}